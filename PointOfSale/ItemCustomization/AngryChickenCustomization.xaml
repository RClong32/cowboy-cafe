<UserControl x:Class="PointOfSale.ItemCustomization.AngryChickenCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.ItemCustomization"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox FontSize="40"></TextBox>
        <CheckBox IsChecked ="{Binding Path= Bread}">
            Bread
        </CheckBox>
        <CheckBox IsChecked ="{Binding Path= Pickle}" Margin="0,72,0,10">
            Pickle
        </CheckBox>
    </Grid>
</UserControl>
