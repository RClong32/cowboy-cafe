<UserControl x:Class="PointOfSale.ItemCustimization.CowpokeChiliCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.ItemCustimization"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox FontSize="40"></TextBox>
        <CheckBox IsChecked ="{Binding Path= Cheese}">
            Cheese 
        </CheckBox>
        <CheckBox IsChecked ="{Binding Path= SourCream}" Margin="0,54,0,-54">
            SourCream
        </CheckBox>
        <CheckBox IsChecked ="{Binding Path= GreenOnions}" Margin="0,105,0,-105">
            GreenOnions
        </CheckBox>
        <CheckBox IsChecked ="{Binding Path= TortillaStrips}" Margin="0,156,0,-156">
            TortillaStrips
        </CheckBox>
    </Grid>
</UserControl>
