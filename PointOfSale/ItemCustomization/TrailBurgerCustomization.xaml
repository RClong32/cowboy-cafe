<UserControl x:Class="PointOfSale.ItemCustomization.TrailBurgerCustomization"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale.ItemCustomization"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBox FontSize="40"></TextBox>
        <CheckBox IsChecked ="{Binding Path= Bun}">
            Bun
        </CheckBox>
        <CheckBox IsChecked ="{Binding Path= Ketchup}" Margin="0,56,0,26">
            Ketchup
        </CheckBox>
        <CheckBox IsChecked ="{Binding Path= Mustard}" Margin="0,107,0,-25">
            Mustard
        </CheckBox>
        <CheckBox IsChecked ="{Binding Path= Cheese}" Margin="0,158,0,-76">
            Cheese
        </CheckBox>
        <CheckBox IsChecked ="{Binding Path= Pickle}" Margin="0,213,0,-131">
            Pickle
        </CheckBox>
        
    </Grid>
</UserControl>
